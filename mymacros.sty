\ProvidesPackage{mymacros}[]

% useful shortcuts
\def\comment#1{\textcolor{red}{#1}}
\def\high#1{\textsuperscript{#1}}

% Define width and measurements
\def\LW#1{\dimexpr#1\linewidth-.5em}

% Define maths things, must be used in Math environment
\def\mat#1{\pmb{#1}} % bolding for matrices
\def\vector#1{\boldsymbol{#1}} % bolding for vectors
\def\Tr#1{\mathrm{Tr}\mleft(#1\mright)} % Trace of matrix
\DeclareMathOperator*{\argmin}{arg\,min} % Define argmin

% Define specific symbols in Math environment
\def\sym#1{\mbox{\textit{#1}}}
\def\Rey{\mbox{\textit{Re}}}